<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="plannerland.plannerland">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/planner"
        android:label="@string/app_name"
        android:theme="@style/Base.AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="plannerland.plannerland.SplashActivity" />
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:label="@string/title_activity_registro"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MenuMain2Activity"
            android:label="@string/title_activity_menu_main2" />
        <activity
            android:name=".TerminosCondicionesActivity"
            android:label="@string/title_activity_terminos_condiciones"
            android:theme="@style/Base.AppTheme" />
        <activity
            android:name=".Contacts"
            android:label="@string/title_activity_contacts" />
        <activity
            android:name=".ChatClient"
            android:label="@string/title_activity_chat_client" />
        <activity
            android:name=".SesrchActivity"
            android:label="@string/title_activity_sesrch"
            android:theme="@style/Base.AppTheme" />
        <activity
            android:name=".DoctorScrolling"
            android:label="@string/title_activity_doctor_scrolling"
            android:theme="@style/Base.AppTheme" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/Base.AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Fragments.LoginActivityFb"
            android:label="@string/title_activity_login_activity_fb"
            android:theme="@style/Base.AppTheme" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".Fragments.RegistroActivityFb"
            android:label="@string/title_activity_registro_activity_fb"
            android:theme="@style/Base.AppTheme"></activity>
    </application>

</manifest>
