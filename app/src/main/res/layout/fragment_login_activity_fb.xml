<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    android:orientation="vertical"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:weightSum="1"
    tools:context="plannerland.plannerland.Fragments.LoginActivityFbFragment"
    tools:showIn="@layout/activity_login_activity_fb">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:id="@+id/logotipo"
        android:background="@drawable/logotipo"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center" />


    <EditText
        android:id="@+id/et_user_login"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:hint="Pid\ Nombre de Usuario"
        android:textColorHint="@color/material_blue_grey_800"
        android:background="#FFFFFF"
        android:layout_weight="0.09"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"/>



    <EditText
        android:id="@+id/et_user_password"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/material_blue_grey_800"
        android:background="#ffffff"
        android:layout_weight="0.09"
        android:textColor="#000000"/>


    <Button
        android:id="@+id/btn_user_value_ok"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesion"
        android:background="#ffa7123f"
        android:textColor="#ffffff"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="o"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/md_white_1000"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Tienes Cuenta? Registrate"
        android:id="@+id/registerL"
        android:layout_weight="0.09"
        android:layout_marginTop="20dp"
        android:textColor="#0D47A1"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_user_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_user_result"
        android:layout_marginStart="32dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
